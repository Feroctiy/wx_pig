.container {
  background-color: #f2f2f2;
  margin-bottom: 120rpx;
}

.header-container {
  background-color: #fff;
}

.address-box {
  width: 100%;
  background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 705rpx center,
                url(https://cdn.it120.cc/images/weappshop/addr-line.png) no-repeat center bottom;
  background-size: 16rpx auto, 750rpx auto;
  background-color: #fff;
  margin: 20rpx 0;
}

.add-addres {
  width: 100%;
}

.add-address .title {
  font-size: 28rpx;
  color: #000;
  margin-left: 30rpx;
  background: url(https://cdn.it120.cc/images/weappshop/ico-add-addr.png) no-repeat left center;
  background-size: 60rpx auto;
  padding: 40rpx 0 40rpx 90rpx;
}

.show-address {
  width: 664rpx;
  box-sizing: border-box;
  padding-left: 100rpx;
  background: url(https://cdn.it120.cc/images/weappshop/ico-addr.png) no-repeat 30rpx 35rpx;
  background-size: 30rpx auto;
}

.show-address .name-tel {
  font-size: 28rpx;
  color: #000;
  padding: 30rpx 0 20rpx 0;
}

.show-address .addr-text {
  font-size: 24rpx;
  color: #888;
  padding-bottom: 34rpx;
  line-height: 36rpx;
}

form {
  width: 100%;
}

.goods-list {
  width: 100%;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.goods-list .list-title {
  font-size: 28rpx;
  color: #000;
  padding: 30rpx 0 25rpx 30rpx;
}

.goods-list  .a-goods {
  width: 100%;
  display: flex;
  border-top: 1px solid #eee;
  padding: 30rpx 0 30rpx 0;
}

.goods-list  .a-goods .img-box {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  margin-right: 20rpx;
  margin-left: 30rpx;
  background-color: #d8d8d8;
}

.goods-list .img-box .img {
  width: 160rpx;
  height: 160rpx;
}

.goods-list  .a-goods .text-box {
  width: 510rpx;
  box-sizing: border-box;
  padding-top: 10rpx;
}

.a-goods .text-box .arow {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.a-goods .text-box .arow .goods-name {
  width: 360rpx;
  font-size: 26rpx;
  height: 74rpx;
  color: #000;
  line-height: 1.6;
  overflow: hidden;
}

.a-goods .text-box .arow01 {
  margin-bottom: 30rpx;
}

.a-goods .text-box .arow .goods-price {
  font-size: 26rpx;
  color: #000;
  align-self: flex-start;
}

.a-goods .text-box .arow .goods-label {
  font-size: 26rpx;
  color: #999;
}

.a-goods .text-box .arow .goods-num {
  font-size: 26rpx;
  color: #999;
}

.peisong-way {
  width: 100%;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.peisong-way .row-box {
  width: 720rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 24rpx 0 24rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.peisong-way .row-label {
  font-size: 28rpx;
  color: #000;
}

.peisong-way .right-text {
  font-size: 28rpx;
  color: #666;
  padding-right: 30rpx;
}

.peisong-way .liuyan {
  width: 510rpx;
  font-size: 28rpx;
}

.goods-info {
  width: 100%;
  background-color: #fff;
  padding-bottom: 24rpx;
}

.goods-info .row-box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 24rpx 30rpx 12rpx 30rpx;
  font-size: 28rpx;
  color: #000;
}

.goods-info .row-box .right-text {
  text-align: right;
}

.jiesuan-box {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1px solid #eee;
  background-color: #fff;
  z-index: 9999;
}

.jiesuan-box .to-pay-btn {
  width: 250rpx;
  text-align: center;
  height: 100%;
  line-height: 100rpx;
  background-color: #b5272d;
  font-size: 32rpx;
  color: #fff;
  border-radius: 0;
}

.jiesuan-box  .left-price {
  display: flex;
  width: 500rpx;
  justify-content: flex-end;
  line-height: 100rpx;
  padding: 0 30rpx 0 0;
  font-size: 28rpx;
  box-sizing: border-box;
}

.jiesuan-box .total {
  color: #b5272d;
  text-align: right;
}





.addContent {
  width: 94%;
  margin: 30rpx 3%;
  background: #fff;
  border-radius: 15rpx;
  box-shadow: 0 0 15rpx #ddd;
}

.title {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
}

.title view {
  width: 50%;
  line-height: 80rpx;
  text-align: center;
  background: #f4f4f4;
  color: #707070;
  border-bottom: 2rpx solid #e9e9e9;
}

.title view.active {
  width: 50%;
  text-align: center;
  background: #fff;
  color: #000;
}

.address {
  width: 94%;
  padding: 20rpx 3%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}

.address image {
  width: 30rpx;
}

.address .info {
  width: 95%;
}
.receiveInfo{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}
.receiveInfo input{
  width: 30%;
  padding:0 2%;
  height: 60rpx;
  border: 1rpx solid #f2f2f2;
  font-size: 30rpx;
}
.desc {
  color: #666;
}

.container {
  width: 100%;
  margin: 20rpx 0 ;
  padding: 0 2%;
  background: #fff;
  border-radius: 15rpx;
  box-shadow: 0 0 15rpx #ddd;
}

.shop {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
  font-size: 30rpx;
}

.shop image {
  width: 35rpx;
  margin-right: 10rpx;
}

.proItem {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
}

.price {
  width: 100%;
  color: #f55160;
  font-size: 30;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.num {
  color: #707070;
}

.oldPrice {
  font-size: 28rpx;
  text-decoration: line-through;
  color: #8a8a8a;
}

.proItem image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 15rpx;
}

.details {
  height: 180rpx;
  width: 70%;
  font-size: 30rpx;
  display: flex;
  flex-flow: row wrap;
  align-content: space-between;
}

.details .name {
  width: 100%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.details .desc{
  width: 100%;
  color: #666;
  font-size: 28rpx;
}
.money {
  font-size: 28rpx;
  color: #333;
}

.money .info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.money .info text {
  color: #f55160;
}

.money .more {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.money .more image {
  width: 25rpx;
  margin-left: 10rpx;
}

.subtotal {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #f2f2f2;
}

.subtotal text {
  color: #f55160;
}

.remark {
  width: 100%;
  padding: 20rpx 0;
  font-size: 30rpx;
}

.remark textarea {
  width: 100%;
}

.operation {
  width: 100%;
  padding: 15rpx 4%;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1;
  box-shadow: 0 -10rpx 15rpx #ddd; /*阴影出现在元素上方*/
}

.total {
  line-height: 100rpx;
  text-align: left;
  font-size: 30rpx;
}

.total text {
  font-size: 30rpx;
  color: #f55160;
}

.btnSubmit {
  font-size: 32rpx;
  width: 30%;
  line-height: 70rpx;
  text-align: center;
  margin: 15rpx 0;
  color: white;
  background: linear-gradient(to right, #fc6864, #f13b61);
  border-radius: 15rpx;
}