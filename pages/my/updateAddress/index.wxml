<cu-custom bgColor="bg-gradual-main-top" isBack="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">修改收货地址</view>
</cu-custom>
<!-- 收货地址 -->
<view class="address-box" bindtap="selectAddress">
	<view class="show-address">
		<view class="name-tel">{{address.ADD_NAME}} {{address.ADD_PHONE}}</view>
		<view class="addr-text">地址:{{address.ADD_ADD}}</view>
	</view>
</view>
<view class="fixed text-right">
	<button class="cu-btn bg-gray round shadow-blur margin-right" size='mini' bindtap="canle">取消</button>
	<button class="cu-btn bg-red round shadow-blur margin-right" size='mini' bindtap="handle">提交修改</button>
</view>
 
 
 